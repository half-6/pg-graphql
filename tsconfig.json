{
  //enable *.d.ts file for ts-node
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "target": "es2017",
    "rootDir": "lib",
    "lib": ["es2017", "esnext"],
    "typeRoots": ["./node_modules/@types"],
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "pretty": true,
    "sourceMap": true,
    "outDir": "./build",
    //"allowJs": true,
    "noEmit": false,
    "strict": false,
    "esModuleInterop": true
  },
  "exclude": [
    "node_modules",

  ],
  "include": [
    "./lib/**/*",
    "./test/**/*"
  ]
}
